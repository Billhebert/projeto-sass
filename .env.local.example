# ============================================
# DESENVOLVIMENTO LOCAL - Configuração
# ============================================

# Copie este arquivo para .env e atualize com seus valores

# ============================================
# AMBIENTE
# ============================================

NODE_ENV=development
LOG_LEVEL=debug
PORT=3011
FRONTEND_URL=http://localhost:5173

# ============================================
# MONGODB (Docker)
# ============================================

MONGO_USER=admin
MONGO_PASSWORD=changeme
MONGODB_URI=mongodb://admin:changeme@localhost:27017/projeto-sass?authSource=admin

# ============================================
# REDIS (Docker)
# ============================================

REDIS_PASSWORD=changeme
REDIS_URL=redis://:changeme@localhost:6379

# ============================================
# MERCADO LIVRE OAUTH
# ============================================

# Obtenha em: https://developers.mercadolibre.com/your-apps
ML_CLIENT_ID=seu_client_id_aqui
ML_CLIENT_SECRET=seu_client_secret_aqui
ML_CALLBACK_URL=http://localhost:3011/api/auth/ml-callback

# ============================================
# JWT
# ============================================

JWT_SECRET=sua_chave_super_secreta_para_desenvolvimento
JWT_EXPIRATION=24h

# ============================================
# API
# ============================================

API_HOST=0.0.0.0
API_PORT=3011

# ============================================
# DATABASE
# ============================================

DATABASE_NAME=projeto-sass

# ============================================
# LOGGING
# ============================================

LOG_FORMAT=pretty
LOG_LEVEL=debug

# ============================================
# CORS
# ============================================

CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# ============================================
# SESSION
# ============================================

SESSION_SECRET=sua_chave_de_sessao_secreta
SESSION_EXPIRY=24h

# ============================================
# EMAIL (Opcional para desenvolvimento)
# ============================================

SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=seu_email@example.com
SMTP_PASS=sua_senha_smtp
EMAIL_FROM=noreply@projeto-sass.com

# ============================================
# BACKUP (Opcional)
# ============================================

BACKUP_ENABLED=false
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30

# ============================================
# MONITORING (Opcional)
# ============================================

MONITORING_ENABLED=false
SENTRY_DSN=

# ============================================
# RATE LIMITING
# ============================================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_ENABLED=true

# ============================================
# SECURITY
# ============================================

ENABLE_HTTPS=false
HELMET_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=false

# ============================================
# CACHE
# ============================================

CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# ============================================
# AUTHENTICATION
# ============================================

PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
PASSWORD_MAX_AGE_DAYS=90

# ============================================
# WEBSOCKET
# ============================================

WEBSOCKET_ENABLED=true
WEBSOCKET_PATH=/ws
WEBSOCKET_HEARTBEAT_INTERVAL=30000

# ============================================
# SYNC & WEBHOOKS (Mercado Livre)
# ============================================

SYNC_INTERVAL_MINUTES=5
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY_MS=5000
MAX_SYNC_WORKERS=3

# ============================================
# DESENVOLVIMENTO
# ============================================

DEBUG=false
SEED_DB=false
MOCK_ML_API=false
SKIP_AUTH=false
