{
  "apps": [
    {
      "name": "vendata-api",
      "script": "./start.sh",
      "cwd": "./apps/api",
      "instances": 1,
      "exec_mode": "fork",
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "512M",
      "error_file": "./logs/api-error.log",
      "out_file": "./logs/api-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true
    },
    {
      "name": "vendata-web",
      "script": "./start.sh",
      "cwd": "./apps/web",
      "instances": 1,
      "exec_mode": "fork",
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "512M",
      "error_file": "./logs/web-error.log",
      "out_file": "./logs/web-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z"
    }
  ]
}
