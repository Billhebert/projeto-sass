{
  "name": "mercadolivre-saas",
  "version": "1.0.0",
  "private": true,
  "description": "SaaS completo para vendedores do Mercado Livre",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "db:generate": "turbo run db:generate --filter=@ml-saas/database",
    "db:push": "turbo run db:push --filter=@ml-saas/database",
    "db:migrate": "turbo run db:migrate --filter=@ml-saas/database",
    "db:studio": "turbo run db:studio --filter=@ml-saas/database",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "tsx": "^4.21.0",
    "turbo": "^2.0.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@10.0.0",
  "dependencies": {
    "sharp": "^0.34.5"
  }
}
