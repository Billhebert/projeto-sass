{
  "name": "projeto-sass",
  "version": "1.0.0",
  "description": "Production-ready Dashboard SASS with Mercado Livre Integration - Full Stack",
  "main": "backend/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon backend/server.js",
    "dev:frontend": "cd frontend && vite",
    "backend:start": "node backend/server.js",
    "frontend:build": "cd frontend && vite build",
    "frontend:preview": "cd frontend && vite preview",
    "test": "node test-endpoints.js",
    "test:frontend": "cd frontend && npm run test",
    "test:frontend:coverage": "cd frontend && npm run test:coverage",
    "verify": "node test-endpoints.js",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "e2e": "concurrently \"npm run dev\" \"cypress run --wait-on http://localhost:5173 --wait-on http://localhost:3011\" --kill-others",
    "build": "npm run frontend:build",
    "build:production": "npm run frontend:build && echo 'âœ“ Frontend built successfully' && npm run backend:start",
    "start": "node backend/server.js",
    "preview": "cd frontend && vite preview",
    "db:start": "docker compose -f docker-compose.dev.yml up -d",
    "db:stop": "docker compose -f docker-compose.dev.yml down",
    "db:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "db:clean": "docker compose -f docker-compose.dev.yml down -v"
  },
  "keywords": [
    "dashboard",
    "saas",
    "mercado-livre",
    "ecommerce",
    "production",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.0.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^8.0.0",
    "node-schedule": "^2.1.1",
    "pino": "^8.16.0",
    "pino-http": "^8.4.0",
    "pino-pretty": "^10.2.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "ws": "^8.15.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cypress": "^15.9.0",
    "mongodb-memory-server": "^9.3.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0"
  }
}
