# ============================================
# PROJECT SASS - Backend Configuration
# ============================================

# Environment
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5000

# ============================================
# MERCADO LIVRE OAUTH
# ============================================

# Mercado Livre App Credentials
# Get these from: https://developers.mercadolibre.com/your-apps
ML_CLIENT_ID=your_client_id_here
ML_CLIENT_SECRET=your_client_secret_here

# Redirect URI must match the one configured in your ML App
# Format: https://yourdomain.com/auth/mercado-livre-callback
ML_REDIRECT_URI=http://localhost:5000/examples/auth/mercado-livre-callback.html

# Optional: ML Webhook Secret Key (for signature verification)
ML_SECRET_KEY=your_webhook_secret_key

# ============================================
# DATABASE
# ============================================

# For development, using file-based storage in backend/data/
# For production, switch to MongoDB, PostgreSQL, etc.

# Example MongoDB:
# DB_TYPE=mongodb
# DB_HOST=localhost
# DB_PORT=27017
# DB_NAME=projeto_sass
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password

# Example PostgreSQL:
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=projeto_sass
# DB_USER=postgres
# DB_PASSWORD=your_db_password

# ============================================
# SECURITY
# ============================================

# Verify webhook signatures (set to true in production)
VERIFY_SIGNATURES=false

# JWT Secret for session management (if needed)
# JWT_SECRET=your_jwt_secret_here_min_32_chars

# ============================================
# LOGGING
# ============================================

LOG_LEVEL=info
# Options: error, warn, info, debug

# ============================================
# OPTIONAL: SERVICES
# ============================================

# Sentry for error tracking (optional)
# SENTRY_DSN=https://your_sentry_dsn

# Email service for notifications (optional)
# SENDGRID_API_KEY=your_sendgrid_key
# NOTIFICATION_EMAIL=admin@yourdomain.com
