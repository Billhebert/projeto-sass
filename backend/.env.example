# ============================================
# PROJETO SASS - Configuração Completa
# ============================================

# ============================================
# AMBIENTE
# ============================================

NODE_ENV=production
LOG_LEVEL=info
PORT=3011
FRONTEND_URL=https://yourdomain.com

# ============================================
# MERCADO LIVRE OAUTH
# ============================================

# Obtenha em: https://developers.mercadolibre.com/your-apps
ML_CLIENT_ID=your_client_id_here
ML_CLIENT_SECRET=your_client_secret_here
ML_REDIRECT_URI=https://yourdomain.com/examples/auth/mercado-livre-callback.html

# Optional: Webhook Secret Key
ML_WEBHOOK_SECRET_KEY=your_webhook_secret_key

# ============================================
# MONGODB DATABASE
# ============================================

# Connection String
MONGODB_URI=mongodb+srv://user:password@cluster0.mongodb.net/projeto-sass?retryWrites=true&w=majority

# Alternative: Local MongoDB
# MONGODB_URI=mongodb://localhost:27017/projeto-sass

# MongoDB Authentication
MONGO_USER=admin
MONGO_PASSWORD=secure_password_here

# ============================================
# REDIS (Optional - for caching/sessions)
# ============================================

REDIS_URL=redis://:password@localhost:6379
REDIS_PASSWORD=redis_password_here

# ============================================
# SECURITY
# ============================================

# Verify webhook signatures (enable in production)
VERIFY_SIGNATURES=true

# JWT Secret for sessions (if implementing user auth)
JWT_SECRET=your_jwt_secret_min_32_characters_long

# API Keys for 3rd party services
API_KEY_STRIPE=sk_live_your_stripe_key
API_KEY_SENDGRID=SG.your_sendgrid_key

# ============================================
# LOGGING & MONITORING
# ============================================

# Pino logging configuration
LOG_LEVEL=info
# Options: error, warn, info, debug, trace

# Sentry Error Tracking
SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# Application tracking
APP_VERSION=1.0.0
ENVIRONMENT=production

# ============================================
# EMAIL SERVICE
# ============================================

# SendGrid
SENDGRID_API_KEY=SG.your_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_ADMIN_EMAIL=admin@yourdomain.com

# Alternative: SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

# ============================================
# BACKUP & STORAGE
# ============================================

# AWS S3 Backup
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
BACKUP_S3_BUCKET=projeto-sass-backups

# Google Cloud Storage
GCS_PROJECT_ID=your-project-id
GCS_BUCKET=projeto-sass-backups
GCS_KEYFILE_PATH=./keys/gcs-key.json

# ============================================
# PERFORMANCE & CACHING
# ============================================

# Cache Strategy
CACHE_STRATEGY=redis  # options: redis, memory, none
CACHE_TTL=3600  # seconds

# Rate limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes in ms
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# EXTERNAL SERVICES
# ============================================

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your_mixpanel_token

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#notifications

# Discord Webhooks
DISCORD_WEBHOOK_URL=https://discordapp.com/api/webhooks/YOUR/WEBHOOK

# ============================================
# API CONFIGURATION
# ============================================

# Timeout (milliseconds)
API_TIMEOUT=15000
DB_TIMEOUT=10000

# Retry policy
MAX_RETRIES=3
RETRY_DELAY=1000

# ============================================
# DEPLOYMENT
# ============================================

# Docker
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_NAME=your-username/projeto-sass

# Kubernetes (if using K8s)
K8S_NAMESPACE=default
K8S_REPLICAS=3

# ============================================
# DEVELOPMENT ONLY
# ============================================

# Enable mock data
USE_MOCK_DATA=false

# Skip email verification
SKIP_EMAIL_VERIFICATION=false

# Verbose logging
VERBOSE_LOGGING=false

# ============================================
# NOTES
# ============================================

# 1. IMPORTANT: Never commit .env file to git
# 2. Use strong passwords for databases
# 3. Rotate API keys regularly
# 4. Monitor logs for suspicious activity
# 5. Keep NODE_ENV=production in production
# 6. Use HTTPS with valid certificates
# 7. Enable CORS only for trusted domains
# 8. Implement rate limiting and monitoring

