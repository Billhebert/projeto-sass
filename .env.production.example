# Production Environment Variables for vendata.com.br
# Não versionado - cria arquivo .env.production na máquina de produção

# ========================================
# APLICAÇÃO
# ========================================
NODE_ENV=production
APP_NAME=Projeto SASS
APP_PORT=3011
FRONTEND_PORT=5173

# ========================================
# DOMÍNIO E URLS DE PRODUÇÃO
# ========================================
DOMAIN=vendata.com.br
API_URL=https://api.vendata.com.br
FRONTEND_URL=https://vendata.com.br
WEBHOOK_URL=https://api.vendata.com.br/webhooks

# ========================================
# BANCO DE DADOS
# ========================================
MONGODB_URI=mongodb://mongodb:27017/vendata_prod
MONGODB_USER=vendata_admin
MONGODB_PASSWORD=MUDAR_SENHA_FORTE_AQUI_32_CARACTERES_minimo
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=MUDAR_SENHA_FORTE_AQUI_32_CARACTERES_minimo

# ========================================
# JWT E SEGURANÇA
# ========================================
JWT_SECRET=MUDAR_SENHA_FORTE_AQUI_MINIMO_64_CARACTERES_use_caracteres_especiais_e_numeros_aleatorios_MUITO_IMPORTANTE
JWT_EXPIRE_IN=7d
REFRESH_TOKEN_SECRET=MUDAR_OUTRA_SENHA_FORTE_AQUI_MINIMO_64_CARACTERES_use_caracteres_especiais_e_numeros_aleatorios_MUITO_IMPORTANTE
REFRESH_TOKEN_EXPIRE_IN=30d

# ========================================
# EMAIL - TEST MODE (SEM ENVIAR PARA CLIENTES)
# ========================================
EMAIL_MODE=test
EMAIL_FROM=noreply@vendata.com.br
EMAIL_FROM_NAME=Projeto SASS
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=seu-email@gmail.com
# EMAIL_PASSWORD=sua-app-password

# ========================================
# MERCADO LIVRE
# ========================================
MERCADO_LIVRE_CLIENT_ID=MUDAR_SEU_CLIENT_ID
MERCADO_LIVRE_CLIENT_SECRET=MUDAR_SEU_CLIENT_SECRET
MERCADO_LIVRE_REDIRECT_URI=https://api.vendata.com.br/auth/ml/callback

# ========================================
# MERCADO PAGO
# ========================================
MERCADO_PAGO_ACCESS_TOKEN=MUDAR_SEU_ACCESS_TOKEN
MERCADO_PAGO_PUBLIC_KEY=MUDAR_SUA_PUBLIC_KEY
MERCADO_PAGO_WEBHOOK_SECRET=MUDAR_SEU_WEBHOOK_SECRET

# ========================================
# LOGS E MONITORAMENTO
# ========================================
LOG_LEVEL=info
LOG_FILE=/var/log/vendata/app.log
ENABLE_METRICS=true

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CORS
# ========================================
CORS_ORIGIN=https://vendata.com.br

# ========================================
# SESSION
# ========================================
SESSION_SECRET=MUDAR_OUTRA_SENHA_FORTE_AQUI_MINIMO_32_CARACTERES
SESSION_EXPIRY_DAYS=7

# ========================================
# TIMEZONE
# ========================================
TZ=America/Sao_Paulo

# ========================================
# CRIPTOGRAFIA
# ========================================
ENCRYPTION_KEY=MUDAR_CHAVE_32_CARACTERES_HEX_aaaa1111bbbb2222cccc3333dddd4444
